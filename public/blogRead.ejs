{%- include('components/header') %}
</div>
<!-- main start -->
<main class="container min-vh-100">
  <div class="row g-5 m-auto p-5">
    <div class="card m-auto" style="width: 645px">
      <div class="card-header d-flex justify-content-between">
        <div
          class="avatar"
          style="
            background-color: red;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            color: white;
          "
        >
          MS
        </div>
        <div class="card-title">
          <a
            href="/blog/{%= data._id %}"
            class="link-body-emphasis text-decoration-none fs-5"
            >{%= data.title %}</a
          >
        </div>
        <div aria-label="settings">
          <a href="#" class="material-icons link-body-emphasis text-decoration-none">more_vert</a>
        </div>
      </div>

      <img
        src="{%= data.image %}"
        alt="{%= data.title %}"
        style="height: 194px; width: 100%"
      />

      <div class="card-content">
        <p>{%= data.content.substring(0, 200) %}</p>
      </div>

      <div class="card-actions d-flex justify-content-between">
        <div>
          <button aria-label="add to favorites">
            <i class="material-icons favorite" onclick="heartBreaker()"
              >favorite</i
            >
          </button>
          <button aria-label="delete">
            <a
              href="/blog/{%= data._id %}/delete"
              class="material-icons link-body-emphasis text-decoration-none"
              onclick="return confirm('Are you sure?')"
              >delete</a
            >
          </button>
        </div>
        <div>
          <button class="expand-more" aria-label="show more">
            <i class="material-icons" onclick="toggleSection()">expand_more</i>
          </button>
        </div>
      </div>

      <div class="collapse mt-2 ">
        <div class="d-flex flex-column">
          <h6 class="text-center">Comments</h6>
          <textarea rows="3" placeholder="Write a comment..."></textarea>
           <br>
          <input type="submit"/>
                  </div>
      </div>
    </div>
  </div>
</main>
<script>
  function toggleSection() {
    const content = document.querySelector(".collapse");
    if (content.style.display === "none") {
      content.style.display = "block";
    } else {
      content.style.display = "none";
    }
  }
  function heartBreaker() {
    const likes = document.querySelector(".favorite");
    likes.classList.toggle("text-danger");
  }
</script>
<!-- main end -->

