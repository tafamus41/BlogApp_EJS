{%- include('components/header') %}
</div>
<!-- main start -->
<main class="container">
    <div class="row g-5">
        <div class="col-md-12 p-3">
            <!-- BlogPost Read -->
            {% if(user) { %}
            
            <div class="admin-area text-end">
                <a class="btn btn-sm btn-primary" href="/post/:id/update">Update</a>
                <a class="btn btn-sm btn-danger" href="/post/:id/delete"
                    onclick="return confirm('Are you sure?')">Delete</a>
                Published: {%= post.isPublished %}
            </div>

            {% } %}

            <p>
                <a class="btn btn-sm btn-secondary" href="/blog/post">Go Home</a>
            </p>
            
            <article class="blog-post">
                <a href="/blog/post?filter[blogCategoryId]={%= post.blogCategoryId._id %}"># {%= post.blogCategoryId.name %}</a>
                <h2 class="display-5 mb-1">
                    <a href="/post/:id" class="link-body-emphasis text-decoration-none">{%= post.title %}</a>
                </h2>
                <p class="blog-post-meta">{%= post.createdAt.toUTCString() %}</p>
                <img src="{%= post.imageUrl %}" alt="{%= post.title%}"
                    style="width: 400px; height:180px; float:left; margin: 0px 15px 15px 0px ">

                {%= post.content %}
            </article>
        </div>
    </div>
</main>
<!-- main end -->

{%- include('components/footer') %}